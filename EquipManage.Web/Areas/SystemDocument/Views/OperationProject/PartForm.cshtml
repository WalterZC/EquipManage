<form id="form1" action="/SystemDocument/Equipment/SubmitPartForm" method="post" enctype="multipart/form-data">
    <div style="padding-top: 10px; margin-right: 20px;">
        <table class="form">
            <tr style="display:none;">
                <th class="formTitle">FId</th>
                <td class="formValue">
                    <input id="FId" name="FId" type="text" class="form-control" />
                </td>
                <th class="formTitle">FItemId</th>
                <td class="formValue">
                    <input id="FItemId" name="FItemId" type="text" class="form-control" />
                </td>
                @*<td class="formValue">
                    <input id="FItemType" name="FItemType" type="text" class="form-control" />
                </td>*@
            </tr>
            <tr>
                <th class="formTitle">所属系统</th>
                <td class="formValue">
                    <select id="FSystemId" name="FSystemId" class="form-control required">
                        <option value="">==请选择==</option>
                    </select>
                </td>
                <th class="formTitle">编码</th>
                <td class="formValue">
                    <input id="FNumber" name="FNumber" type="text" class="form-control required" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">名称</th>
                <td class="formValue">
                    <input id="FShortName" name="FShortName" type="text" class="form-control required" />
                </td>
                <th class="formTitle">值类型</th>
                <td class="formValue">
                    <select id="FValType" name="FValType" class="form-control required">
                        <option value="FCheck">单选</option>
                        <option value="FDecimal">数值</option>
                        <option value="FString">文字</option>
                        <option value="FMultiCheck">多选</option>
                    </select>
                    @*<input id="FValType" name="FValType" type="text" class="form-control required" />*@
                </td>
            </tr>  
            <tr>
                <th class="formTitle">最大值</th>
                <td class="formValue">
                    <input id="FMaxVal" name="FMaxVal" type="text" number="true"  class="form-control required number" />
                </td>
                <th class="formTitle">最小值</th>
                <td class="formValue">
                    <input id="FMinVal" name="FMinVal" type="text" number="true" required class="form-control required number" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">选项</th>
                <td class="formValue"colspan="3">
                    <input id="FCheckItems" name="FCheckItems" type="text" class="form-control required" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">作业内容</th>
                <td class="formValue" colspan="3">
                    <input id="FContent" name="FContent" type="text" class="form-control required" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">设备图片</th>
                <td class="formValue" colspan="3">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail" style="width: 330px; height: 200px;">
                            <img id="imgcode"  src="~/Content/img/no-image330x250.png" alt="无照片" />
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 330px; max-height: 250px;"> </div>
                        <div>
                            <span class="btn default btn-file">
                                <span class="fileinput-new"> 选择图片 </span>
                                <span class="fileinput-exists"> 变更 </span>
                                <input type="file" accept="image/jpeg,image/png,image/gif" data-extensions="jpg,jpeg,png,gif">
                            </span>
                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> 移除 </a>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</form>
